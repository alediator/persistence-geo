    <issueManagement>
        <system>redmine</system>
        <url>https://redmine.emergya.es/projects/maagya</url>
    </issueManagement>
    <ciManagement>
        <system>jenkins</system>
        <url>http://jenkins.emergya.es/jenkins/view/maagya/</url>
    </ciManagement>
    <inceptionYear>2012</inceptionYear>
    <!-- Project Information -->


    <!-- Environment Information -->
    <scm>
        <connection>scm:git:git@github.com:Emergya/persistence-geo.git</connection>
        <url>scm:git:git@github.com:Emergya/persistence-geo.git</url>
        <developerConnection>scm:git:git@github.com:Emergya/persistence-geo.git</developerConnection>
    </scm>



    <repositories>
        <repository>
            <id>jboss-repo</id>
            <url>http://repository.jboss.org/maven2</url>
        </repository>
        <repository>
            <id>spring-repo</id>
            <url>http://maven.springframework.org</url>
        </repository>
        <repository>
            <id>nexus</id>
            <url>http://nexus.emergya.es/nexus/content/groups/public</url>
        </repository>
    </repositories>

    <dependencies>
		<!-- Internal dependencies -->
		<dependency>
			<groupId>${project.parent.groupId}</groupId>
			<artifactId>persistence-geo-core</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
        <!-- SPRING DEPENDENCIES -->
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-test</artifactId>
            <version>${spring.version}</version>
            <scope>test</scope>
        </dependency>
        <!--Misc dependencies -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.8.1</version>
            <scope>test</scope>
        </dependency>
        <!-- OpenFleetService dependency -->
        <dependency>
	        <groupId>com.emergya.openfleetservices</groupId>
			<artifactId>importer</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>
    </dependencies>

    <build>
        <finalName>${project.artifactId}</finalName>

        <filters>
            <filter>src/main/filters/${filter.profile}</filter>
        </filters>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
            <resource>
                <directory>src/test/resources</directory>
                <filtering>true</filtering>
                <targetPath>test-classes</targetPath>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven-compiler-plugin.version}</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                    <optimize>true</optimize>
                    <debug>true</debug>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <configuration>
                    <encoding>${project.build.sourceEncoding}</encoding>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <!-- ================= Profiles to deploy ================= -->
        <profile>
            <id>local</id>
            <properties>
                <filter.profile>local.properties</filter.profile>
            </properties>
        </profile>
        <profile>
            <id>first</id>
            <properties>
                <!-- Database validate -->
                <database.hibernate.hbm2ddl.auto>create</database.hibernate.hbm2ddl.auto>
                <filter.profile>${filterToApply}.properties</filter.profile>
            </properties>
        </profile>
        <profile>
            <id>test</id>
            <properties>
                <filter.profile>test.properties</filter.profile>
            </properties>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>
        <profile>
            <id>devel</id>
            <properties>
                <!-- Database validate -->
                <database.hibernate.hbm2ddl.auto>validate</database.hibernate.hbm2ddl.auto>
                <filter.profile>devel.properties</filter.profile>
            </properties>
        </profile>
        <profile>
            <id>oracle</id>
            <properties>
                <!-- Database validate -->
                <database.hibernate.hbm2ddl.auto>validate</database.hibernate.hbm2ddl.auto>
                <filter.profile>oracle.properties</filter.profile>
            </properties>
        </profile>
    </profiles>

</project>
